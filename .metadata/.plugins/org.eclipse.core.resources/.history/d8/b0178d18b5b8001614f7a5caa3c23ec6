package fracCalc;

import java.util.Scanner;

public class FracCalc {
	

    public static void main(String[] args) 
    {
        // TODO: Read the input from the user and call produceAnswer with an equation
   
    	System.out.println("Enter your operands, only two operands and a operator to compile.");
    	Scanner userInput = new Scanner(System.in);
    	String inputNum = userInput.nextLine();
    	while(inputNum != "quit"){
    		int[] answers = produceAnswer(inputNum);
    		System.out.print("whole:" + answers[0]);
    		System.out.print(" numerator:" + answers[1]);
    		System.out.print(" denominator:" + answers[2]);
    		
    		inputNum = userInput.nextLine();
    	}
    		
    	

    }
    
    // ** IMPORTANT ** DO NOT DELETE THIS FUNCTION.  This function will be used to test your code
    // This function takes a String 'input' and produces the result
    //
    // input is a fraction string that needs to be evaluated.  For your program, this will be the user input.
    //      e.g. input ==> "1/2 + 3/4"
    //        
    // The function should return the result of the fraction after it has been calculated
    //      e.g. return ==> "1_1/4"
    public static int[] produceAnswer(String input){
    	String[] inputParse = parseInput(input); // Splits the expression from space; gets 1st Operand, 2nd Operand, & operator
 
    	int[] operandParse = parseOperands(inputParse[2]);//Takes in the i
    	return operandParse;
    } 
    public static String[] parseInput(String inputExpression){
       String[] inputArray = inputExpression.split("\\s+"); //must split from the space since it will not always be a "+" operator
       return inputArray;
    }
    
   public static int[] parseOperands(String num){
	  int[] individualNum;// collects the integers for whole,numerator, and denominator
	  					  // index 0 = whole; index 1 = numerator; index 2 = denominator
	  
	  if(num.indexOf("_" ) > 0){
		  
	      String[] wholeNumSplit = num.split("_");
	      individualNum[0] = Integer.parseInt(wholeNumSplit[0]); 
	        
	      String[] numeratorSplit = wholeNumSplit[1].split("/");
	      individualNum[1] = Integer.parseInt(numeratorSplit[0]);
	      individualNum[2] = Integer.parseInt(numeratorSplit[1]);
	       
	      return individualNum;
	      
	      
	       
	        
       }else if(num.indexOf("/") > 0){
       	String[] numeratorSplit = num.split("/");
	        String numerator = numeratorSplit[0];
	        String denominator = numeratorSplit[1];
	       
	        System.out.println("whole:0 numerator:" + numerator + " denominator:" + denominator);
	        System.out.println("\n");
       }else{
       	System.out.println("whole:" + num +" numerator:0 denominator:0");
       }
	  
       return "";
   }
   
   public static String toImproperFrac(int a, int b, int c){
	   	int x = c * a;
		int y = x + b;
		//String str = y + "/" + c;
		//return str;
		return "";
   }
    
}
