
public class TestingTwo {
	public static void main(String[] args){
		int[] num = {0,1,2};
		
		int[] calc = toImproperFrac(num);
		System.out.println(calc[0] + "/" + calc[1]);
	}
	public static int[] toImproperFrac(int[] arrayNum){
		int[] newFraction = {0,0};
		
		if(arrayNum[0] == 0){
			newFraction[0] = arrayNum[1];
			newFraction[1] = arrayNum[2];
			return newFraction; 
			
		}else if(arrayNum[1] == 0 || arrayNum[2] == 0){
			newFraction[0] = arrayNum[0];
			
			return newFraction; 
			
		}else{
			
			int numerator = (arrayNum[2] * arrayNum[0]) + arrayNum[1]; //multiplies the denominator by the whole number, adds numerator
			   
			newFraction[0] = numerator; //new improper numerator value	
			newFraction[1] = arrayNum[2];//inputed denominator
			return newFraction;      
		}
	}
}
